<% if @stock %>
  <div class="card text-white bg-info mb-3" style="max-width: 18rem;">
    <div class="card-header">Stock Information</div>
      <div class="card-body">
        <h5 class="card-title"><%= @stock.ticker %></h5>
        <p class="card-text">
          <strong> Company  : </strong><%= @stock.name %>
        </p>
        <p class="card-text">
          <strong> Price : </strong><%= @stock.last_price %>
        </p>
      </div>
      <% if current_user.can_track_stock?(@stock.ticker) %>
        <%= link_to "Add to portfolio", user_stocks_path(user: current_user.id, ticker: @stock.ticker), method: :POST, class: 'btn btn-success mx-auto mb-3'%>
      <% end %>
  </div>
<% else %>  
  <%= render "layouts/messages" %>
<% end %>