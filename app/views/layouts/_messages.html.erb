<% if alert %>
  <div class="alert alert-danger mt-2 col-9" role="alert"><%= alert %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
 </div>
<% end %>
<% if notice %>
  <div class='alert alert-success mt-2 col-9' role='alert'><%= notice %>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button></div> 
<% end %>