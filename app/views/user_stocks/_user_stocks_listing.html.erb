<div class='col-10'>
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">Ticker</th>
        <th scope="col">Name</th>
        <th scope="col">Price</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
    <% @user_stocks.each do |user_stock| %>
      <tr>
        <th><%= user_stock.ticker %></th>
        <td><%= user_stock.name %></td>
        <td><%= user_stock.last_price %></td>
        <td> <%= link_to "Remove", user_stock_path(user_stock), method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure?'}%> </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>